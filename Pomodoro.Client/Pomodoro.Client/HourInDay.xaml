<UserControl x:Class="Pomodoro.Client.HourInDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pomodoro.Client"
             mc:Ignorable="d"  Background="DarkGray" d:DesignWidth="300" Height="169.137">
    <Grid>
        <Label Name="lblHour" Content="{Binding Hour, Mode=OneWay}" FontSize="30" Margin="10,8,100,108"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="100,69,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="177"/>
        <Label x:Name="label" Content="Pomodoro Goal" HorizontalAlignment="Left" Margin="0,66,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="62" Margin="100,97,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="177"/>
        <Image x:Name="image" Visibility="{Binding ImgVisibility, Mode=OneWay}" HorizontalAlignment="Left" Height="62" Margin="10,97,0,0" VerticalAlignment="Top" Width="85"/>


    </Grid>
</UserControl>
